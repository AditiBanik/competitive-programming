#include <iostream>
#include <bits/stdc++.h>
using namespace std;
#define ll long long
 
int main(){
    ll int t;
    cin>>t;
    while(t--){
        ll int a,b;
        cin>>a>>b;
        if(a*2<=b){
            cout<<a<<endl;
        }
        else if(b*2<=a){
            cout<<b<<endl;
        }
        else{
            cout<<(a+b)/3<<endl;
        }
    }
 
 
    return 0;
}
