str1=input()
str2=input()
total=len(str1)+len(str2)
count=0
if(len(str1)==0 or len(str1)==0):
    print(max(len(str1),len(str2)))
else:
        
    for i in range(1,min(len(str1),len(str2))+1):
        if(str1[-i]==str2[-i]):
            count+=1
        else:
            break
    print(total-((count)*2))
