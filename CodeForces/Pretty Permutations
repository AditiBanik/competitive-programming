for _ in range(int(input())):
    n=int(input())
    if(n%2!=0):
        if(n==3):
            print(3,1,2)
        else:
            print(2,1,end=" ")
            
            for i in range(3,n-3,2):
                print(i+1,end=" ")
                print(i,end=" ")
            print(n,n-2,n-1)
            
            
    else:
        for i in range(2,n+1,2):
            print(i,end=" ")
            print(i-1,end=" ")
        print()
        
